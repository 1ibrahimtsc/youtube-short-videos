{
  "manifest_version": 3,
  "name": "YouTube Shorts Redirector",
  "version": "1.0",
  "description": "Redirects YouTube Shorts to normal watch page",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YT Shorts Redirector"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
